---
import Logo from "./Logo.astro";

import {getI18N} from '../i18n/'
const { currentLocale } = Astro
const i18n = getI18N({currentLocale})
---

<div class="w-full relative min-h-[560px]">
  <div
    class="absolute inset-0 h-full justify-center z-10 m-auto flex flex-col items-center w-full gap-20"
  >
    <section
      class="relative z-10 animate-fade-down flex justify-center items-center gap-8 flex-col"
    >
      <h1
        class="flex items-center gap-8 text-4xl md:gap-14 md:text-6xl lg:gap-20 lg:text-8xl "
      >
        <span>E</span>
        <span>S</span>
        <span>L</span>
        <Logo
          class="h-[2rem] w-auto md:h-[3rem] lg:h-20 scale-150"
          aria-label="A"
        />
        <span>N</span>
        <span>D</span>
      </h1>

      <p
        class="subtitle md:text-xl lg:text-2xl text-center text-wrap font-jura px-4 uppercase "
      >
        {i18n.VIDEO.VIDEO_SUBTITLE}
      </p>
    </section>
  
  <a
    class="animate-fade-up  relative lg:te xt-2xl md:px-8 md:text-xl text-xs w-fit font-medium no-underline px-6 py-3 border border-solid border-white rounded-full uppercase
    hover:bg-black/40 hover:cursor-pointer
      hover:shadow-[0_0px_15px_rgba(255,_255,_255,_0.7)]
      transition-all duration-300 ease
      hover:[text-shadow:0_0px_15px_rgba(255,_255,_255,_0.95)]
  "
    >{i18n.VIDEO.VIDEO_BUTTON}</a
  >
</div>
  <video
    class="w-full h-[90vh] min-h-[560px] object-cover object-top animate-fade animate-once animate-duration-1000"
    src="/video.mp4"
    autoplay
    loop
    muted
    style="clip-path: polygon(100% 0, 100% 85%, 50% 100%, 0 85%, 0 0);"></video>
  <video
    class="absolute blur-3xl w-full -bottom-48 -z-40 animate-fade animate-once animate-duration-1000"
    src="/video.mp4"
    autoplay
    loop
    muted></video>
</div>
